{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "element-plus/*": ["node_modules/element-plus/*"]
    },
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  }
}
